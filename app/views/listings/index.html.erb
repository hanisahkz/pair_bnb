<h1>Property Listings</h1>

<%= link_to "Add a new property", new_listing_path %>

<table>
  <tr>
    <th> Title</th>
    <th>Price per Night</th>
    <th>Guest Capacity</th>
    <th>Room Type</th>
    <th></th>
  </tr>

  <% @listings.each do |listing| %>
  <tr>
    <td><%= listing.title%></td>
    <td><%= listing.price_per_night%></td>
    <td><%= listing.guest_capacity%></td>
    <td><%= listing.room_type%></td>
    <td><%= link_to "Show", listing_path(listing)%></td>
    <td><%= link_to "Edit", edit_listing_path(listing)%></td>
    <td><%= link_to "Delete", listing_path(listing), method: :delete, data: {confirm: 'Are you sure?'} %></td>
  </tr>
  <%end%>
</table>