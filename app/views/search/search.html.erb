
  <% @listings.each do |listing| %>
    
    <h3>
      <%= link_to listing.try(:highlight).try(:location) ? listing.highlight.location[0].html_safe : listing.location,
        controller: "listings",
        action: "show",
        id: listing.id%>
    </h3>
    <% if listing.try(:highlight).try(:string) %>
      <% listing.highlight.string.each do |snippet| %>
        <p><%= snippet.html_safe %>...</p>
      <% end %>
    <% end %>

  <% end %>
   


