<!DOCTYPE html>
<html>
<head> 
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link href='https://fonts.googleapis.com/css?family=Open+Sans' rel='stylesheet' type='text/css'>
</head>


<body>
<% if signed_in? %>
  <%= render partial: '/layouts/signin_navbar' %>
<% else %>
  <%= render partial: '/layouts/navbar' %>
<% end %>




  <div id="header">
    <% if signed_in? -%>
      <%= button_to t(".sign_out"), sign_out_path, method: :delete %>

    <% else -%>
      <div class="btn-primary"> <%= link_to t(".sign_in"), sign_in_path %></div>
    <% end -%>
  </div>

  <div id="flash">
    <% flash.each do |key, value| -%>
      <div id="flash"><%= key %> : <%=value %></div>
    <% end %>
  </div>

<div id="user-widget">
  <% if signed_out? %>
    <%= link_to "Sign in with Facebook", "/auth/facebook", id: "sign_in" %>
  <% else %>
    <p>Welcome back, <%=current_user.first_name%>.</p> 

  <% end %>
</div>

  <%= yield %>
</body>
</html>
