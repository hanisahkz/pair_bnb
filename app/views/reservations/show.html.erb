<h1>Reservation:</h1>

<p>
  <strong>Check in date:</strong>
    <%= @reservation.check_in %>
</p>

<p>
  <strong>Check out date:</strong>
    <%= @reservation.check_out %>
</p>

<p>
  <strong>Guest:</strong>
    <%= @reservation.guest %>
</p>

<p>
  <strong>Room type:</strong>
    <%= @reservation.listing.room_type %>
</p>

<p>
  <strong>Total price:</strong>
    $<%= @reservation.listing.price_per_night %> x <%= pluralize(@total_nights, 'night') %> = $ 
    <%= @total_price %>
</p>

<p>
  <strong>Reserved by:</strong>
    <%= @reservation.user.first_name %>
</p>

<p>
  <strong>Host:</strong>
    <%= @reservation.listing.user.first_name %>
</p>



<%= form_tag transactions_path do %>
  <%= hidden_field_tag(:total_price, @total_price) %>
  <%= submit_tag "Pay $ #{@total_price}" , class: "button mt1" %>
<% end %>










 






